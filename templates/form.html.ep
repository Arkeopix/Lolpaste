% layout 'default';
%=t h1 => 'LolPaste'
    <div id="form" />
    %=t h1 => 'Let the magic happen'
    %= form_for '/process' => (method => 'post') => begin
    %= label_for Title => 'Title:' 
    %= text_field 'Title'
    <br/>
    %= label_for Text => 'Text:'
    %= text_area 'Text', rows => 10, id =>'flex'
    <br/>
    %= submit_button 'click', id => 'button'
    %= end
   </div>
